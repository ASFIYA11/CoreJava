class String8 {
    public static void main(String[] args) {
        int count = 1; 
        String words = "hello good morning";

        
        for (int i = 0; i < words.length(); i++) {
            
            if (words.charAt(i) == ' ') {
                count++;
            }
        }

        
        System.out.println("Word count: " + count);
    }
}
